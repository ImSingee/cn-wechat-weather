.weather-wrapper {
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
}

.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather {
  font-size: 40rpx;
  text-align: center;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.timetips-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.future {
  display: flex;
}

.future-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  align-items: center;
  width: 120rpx;
}

.future-time {
  margin-top: 50rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}

.future-temp {
  margin-top: 50rpx;
  font-size: 30rpx;
  line-height: 56rpx;
}

.future-item image {
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
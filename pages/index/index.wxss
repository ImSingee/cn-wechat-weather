.weather-wrapper {
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
}

.weather-location {
  position: absolute;
  top: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.7;
}

.weather-location-show {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.weather-location-choose {
  display: none;
}

.weather-location-auth {
  font-size: 30rpx;
  line-height: 42rpx;
  background: none;
}

.weather-location-auth::after {
  border: none;
}

.weather-location-icon {
  width: 21rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather {
  font-size: 40rpx;
  text-align: center;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.timetips-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.future {
  display: flex;
}

.future-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  align-items: center;
  width: 120rpx;
}

.future-time {
  margin-top: 50rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}

.future-temp {
  margin-top: 50rpx;
  font-size: 30rpx;
  line-height: 56rpx;
}

.future-item image {
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.weather-today {
  display: flex;
  align-items: center;
  position: absolute;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  height: 60rpx;
  width: 100%;
  bottom: 0;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
.weather-today .date {
  padding-left: 20rpx;
}

.weather-today .weather-temp {
  flex-grow: 1;
  text-align: right;
  padding-right: 20rpx;
}

.weather-today image {
  height: 24rpx;
  width: 13rpx;
  padding-right: 20rpx;
}